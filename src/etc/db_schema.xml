<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

    <table name="jh_import_lock" resource="default" engine="innodb" comment="Import Lock">
        <column xsi:type="text" name="import_name" nullable="true" comment="Import Name"/>
    </table>

    <table name="jh_import_history" resource="default" engine="innodb" comment="Import History">
        <column xsi:type="int" name="id" identity="true" unsigned="true" nullable="false" comment="ID"/>
        <column xsi:type="varchar" name="source_id" length="64" nullable="true" comment="Source ID"/>
        <column xsi:type="datetime" name="started" nullable="true" comment="Started"/>
        <column xsi:type="datetime" name="finished" nullable="true" comment="Finished"/>
        <column xsi:type="varchar" name="import_name" length="64" nullable="true" comment="Import Name"/>
        <column xsi:type="varchar" name="memory_usage" length="64" nullable="true" comment="Memory Usage"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <index referenceId="JH_IMPORT_HISTORY_IMPORT_NAME">
            <column name="import_name"/>
        </index>
    </table>

    <table name="jh_import_history_log" resource="default" engine="innodb" comment="Import History Log">
        <column xsi:type="int" name="id" identity="true" unsigned="true" nullable="false" comment="ID"/>
        <column xsi:type="int" name="history_id" unsigned="true" nullable="false" comment="History ID"/>
        <column xsi:type="text" name="message" nullable="false" comment="Message"/>
        <column xsi:type="varchar" name="log_level" length="64" nullable="true" comment="Log Level"/>
        <column xsi:type="datetime" name="created" nullable="false" comment="Created At"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign"
                    referenceId="JH_IMPORT_HISTORY_LOG_HISTORY_ID_JH_IMPORT_HISTORY_ID"
                    table="jh_import_history_log"
                    column="history_id"
                    referenceTable="jh_import_history"
                    referenceColumn="id"
                    onDelete="CASCADE"/>
    </table>

    <table name="jh_import_history_item_log" resource="default" engine="innodb" comment="Import History Item Log">
        <column xsi:type="int" name="id" identity="true" unsigned="true" nullable="false" comment="ID"/>
        <column xsi:type="int" name="history_id" unsigned="true" nullable="false" comment="History ID"/>
        <column xsi:type="int" name="reference_line" unsigned="true" nullable="true" comment="Reference Line"/>
        <column xsi:type="varchar" name="id_field" length="64" nullable="true" comment="ID Field"/>
        <column xsi:type="varchar" name="id_value" length="64" nullable="true" comment="ID Value"/>
        <column xsi:type="datetime" name="created" nullable="false" comment="Created At"/>
        <column xsi:type="text" name="message" nullable="false" comment="Message"/>
        <column xsi:type="varchar" name="log_level" length="64" nullable="true" comment="Log Level"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>

        <constraint xsi:type="foreign"
                    referenceId="JH_IMPORT_HISTORY_ITEM_LOG_HISTORY_ID_JH_IMPORT_HISTORY_ID"
                    table="jh_import_history_item_log"
                    column="history_id"
                    referenceTable="jh_import_history"
                    referenceColumn="id"
                    onDelete="CASCADE"/>

        <index referenceId="JH_IMPORT_HISTORY_ITEM_LOG_ID_VALUE">
            <column name="id_value"/>
        </index>
    </table>

    <table name="jh_import_archive_csv" resource="default" engine="innodb" comment="Import CSV Archive">
        <column xsi:type="int" name="id" identity="true" unsigned="true" nullable="false" comment="ID"/>
        <column xsi:type="varchar" name="source_id" length="64" nullable="true" comment="Source ID"/>
        <column xsi:type="text" name="file_location" nullable="false" comment="File Location"/>
        <column xsi:type="boolean" name="deleted" default="0" nullable="false" comment="Deleted"/>
        <column xsi:type="boolean" name="archived" default="0" nullable="false" comment="Archived"/>
        <column xsi:type="text" name="archive_location" nullable="true" comment="Archive Location"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
